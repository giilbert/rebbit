{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": "src",
    "paths": {
      "@controllers/*": [
        "controllers/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@middleware/*": [
        "middleware/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}